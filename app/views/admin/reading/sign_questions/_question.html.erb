<tr>
  <td class="center">
    <label class="pos-rel">
      <input type="checkbox" class="ace" />
      <span class="lbl"></span>
    </label>
  </td>
  <td><img height="150" class="thumbnail inline no-margin-bottom" alt="Ảnh không hợp lệ" src="<%= question.picture %>"></td>
  <% question.answers.each do |answer| %>
    <td><%= answer.content %></td>
  <% end %>
  <td>
    <%= t ".answer"%><br/><%= Answer.true_answer(question.id).first&.content %>
  </td>
  <td>
    <div class="hidden-sm hidden-xs btn-group">
      <a href="<%=edit_admin_reading_sign_question_path question%>" role="button" data-toggle="modal">
        <button class="btn btn-xs btn-info">
          <i class="ace-icon fa fa-pencil bigger-120"></i>
        </button>
      </a>
      <% if not_belong_to_exam(question.question_type) %>
        <%= link_to admin_reading_sign_question_path(question), method: :delete, data: { confirm: t(".confirm") } do %>
          <button class="btn btn-xs btn-danger">
            <i class="ace-icon fa fa-trash-o bigger-120">
            </i>
          </button>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>
